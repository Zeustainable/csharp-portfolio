<environment>
    <link rel="stylesheet" href="~/css/Header_footer/Header_stylesheet.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/Mobile_responsive/Header_footer/Header_stylesheet.css" asp-append-version="true">
</environment>

<section class="section-header">
    <nav class="navbar navbar-expand-lg bg-dark position-fixed top-0 w-100" data-bs-theme="dark">
        <div class="container">

            <!-- LOGO | HOME -->
            <a data-aos="fade-down" data-aos-duration="1000" class="fs-2 text-white text-decoration-none fw-bold" asp-page="/Index">Portfolio</a>

            <!-- MOBILE TOGGLE -->
            <button data-aos="fade-down" data-aos-duration="1400" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- NAVIGATION LINKS + BUTTONS | DESKTOP VIEW -->
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

                <!-- HOME NAVIGATION -->
                <div class="d-flex flex-grow-1 justify-content-center">
                    <div class="navbar-nav gap-3">
                        <a data-aos="fade-down" data-aos-duration="1200" class="nav-link fs-6 @(ViewData["Title"]?.ToString() == "Home" ? "active" : "")" asp-page="/Index">Home</a>
                        <a data-aos="fade-down" data-aos-duration="1400" class="nav-link fs-6 @(ViewData["Title"]?.ToString() == "About" || ViewData["About"]?.ToString() == "True" ? "active" : "")" asp-page="/View/About">About</a>
                        <a data-aos="fade-down" data-aos-duration="1600" class="nav-link fs-6 @(ViewData["Title"]?.ToString() == "Project" || ViewData["Project"]?.ToString() == "True" ? "active" : "")" asp-page="/View/Project">Project</a>
                        <a data-aos="fade-down" data-aos-duration="1800" class="nav-link fs-6 @(ViewData["Title"]?.ToString() == "Contact" ? "active" : "")" asp-page="/View/Contact">Contact</a>
                    </div>
                </div>

                <!-- LOGIN NAVIGATION | HIDDEN -->
                <div class="d-none div-button d-flex justify-content-end">
                    <a class="btn btn-outline-light text-decoration-none rounded p-1 px-4 m-1" href="/?page=Login">Log In</a>
                    <a class="btn btn-light text-decoration-none text-dark rounded p-1 px-4 m-1" href="/?page=Signup">Sign Up</a>
                </div>

                <!-- FUNCTIONAL NAVIGATION -->
                <div class="div-button d-flex justify-content-end">
                    <a data-aos="fade-down" data-aos-duration="2000" class="btn btn-outline-light text-decoration-none rounded p-1 px-4 m-1" asp-page="/View/Calculator">Calculator</a>
                    <a data-aos="fade-down" data-aos-duration="2200" class="btn btn-light text-decoration-none text-dark rounded p-1 px-4 m-1" asp-page="/View/Crud">C.R.U.D</a>
                </div>
            </div>
        </div>
    </nav>
</section>